
@{
    ViewBag.Title = "Messager";
}

<!--Перенести в файл тем-->
<style>
    .mainContainer{
    background-image:url('../../Content/Image/email.jpg');
    height: 350px;
}
    .brushLabel{
        color: white;
    }
    .inputFull{
        width: 100%;
    }
    .inputHalf{
        width: 50%;
    }
    .Opacity{
        opacity: 0.75;
    }
    .nextRow{
        margin-top: 15px;
    }
    .setMinHeight{
        min-height: 150px;
    }
    .rightAlign{
       text-align: right;
    }
    .leftAlign {
        text-align: right;
    }
    .recipienttable{
        width: 100%;        
        background-color: whitesmoke;
    }
    .recipientdiv {
        max-height: 150px;
    }
    .recipienttabletdbutton{
        width:25%;
    }
</style>


<div class="container-fluid mainContainer"  >
    <div class="row Opacity col-xs-12 col-sm-12 col-md-12 col-lg-12" >
        <div class="row">
            <div class="brushLabel col-xs-6 col-sm-6 col-md-6 col-lg-6">
                Enter Email
            </div>
            <div class="brushLabel col-xs-6 col-sm-6 col-md-6 col-lg-6">
                Subject of Message
            </div>
        </div>
        <div class="row">
            @using (Html.BeginForm("AddRecipient", "Home"))
            {
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                <input class="inputFull"  type="text" name="recipient"/>
            </div>
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                <input type="submit" value="Add" />
            </div>
            }
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <input class="inputHalf"/>
            </div>            
        </div>
        <div class="row nextRow">
            <div class="brushLabel col-xs-6 col-sm-6 col-md-6 col-lg-6">
                Email List
            </div>
            <div class="brushLabel col-xs-6 col-sm-6 col-md-6 col-lg-6">
                Enter Your Message
            </div>
        </div>
        <div class="row nextRow">
            <div class=" col-xs-3 col-sm-3 col-md-3 col-lg-3 pre-scrollable recipientdiv">
               
                   @if (ViewBag.Recipients != null && ViewBag.Recipients.Count != 0)
                   {
                    <table class="recipienttable">
                        @foreach (string recipient in ViewBag.Recipients)
                        {
                        <tr>
                            <td>@recipient</td>
                            <td class="recipienttabletdbutton">@Html.ActionLink("Delete", "DeleteRecipient", "Home", new { recipientname = recipient }, null)</td>
                        </tr>
                        }
                    </table>
                   }
                   else
                   {
                       <h5 class="brushLabel">The recipients is absent</h5>
                   }              
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xs-offset-3 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
               <input class="inputFull setMinHeight"/>
            </div>
        </div>
        <div class="row nextRow col-xs-offset-4 col-sm-offset-4 col-md-offset-4 col-lg-offset-4">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                @Html.ActionLink("Delete", "DeleteRecipient", "Home", new { recipient = "" })
            </div>
        </div>
        <div class="row rightAlign">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <button>Send</button><!--Ссылка вместо кнопки-->
            </div>
        </div>
    </div>
</div>



